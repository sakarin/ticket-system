<div class="span9">
  <div class="widget stacked">
    <div class="widget-header">
      <i class="icon-tasks"></i>

      <h3>Listing destinations</h3>
    </div>

    <div class="widget-content">
      <table class="blue">
        <tr>
          <th>Company name</th>
          <th>Address</th>
          <th>Tel</th>
          <th>Fax</th>
          <th></th>
        </tr>

        <% @companies.each do |company| %>
            <tr>
              <td><%= link_to company.name, edit_company_path(company) %></td>
              <td><%= company.address %></td>
              <td><%= company.tel %></td>
              <td><%= company.fax %></td>
              <td class="toolbars">
                <%= link_to t('toolbars.edit'), edit_company_path(company), :title => t('toolbars.edit'), :class => "act edit" %>
                <%= link_to t('toolbars.delete'), company, confirm: t('confirm.delete'), method: :delete, :title => t('toolbars.delete'), :class => "act delete" %>
              </td>
            </tr>
        <% end %>

      </table>
      <div class="btn-with-navbar">
        <%= will_paginate @destinations, :renderer => BootstrapPagination::Rails, :class => "pagination floatright", :previous_label => "&#8592;", :next_label => "&#8594;" %>
        <%= link_to "New Company", new_company_path, :class => "btn btn-success" %>
      </div>

    </div>
  </div>
</div>

<div class="span3">
  <div class="widget stacked widget-box">
    <div class="widget-header">
      <i class="icon-search"></i>

      <h3>Search Sources</h3>
    </div>
    <!-- /widget-header -->

    <div class="widget-content">

      <%= search_form_for @search, :html => {:class => ""} do |f| %>
          <div class="form-inputs">
            <div class="control-group source_name">
              <label class="control-label" for="source_name">Name</label>

              <div class="controls">
                <%= f.text_field :name_cont %>
              </div>
              <div class="controls">
                <%= f.button :search, :class => "btn" %>
              </div>


            </div>
          </div>
      <% end %>

    </div>
    <!-- /widget-content -->

  </div>
</div>


