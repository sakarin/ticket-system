<%= simple_form_for(@company) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :address, :as => :text, :input_html => {:cols => 100, :rows => 3} %>
      <%= f.input :tel %>
      <%= f.input :fax %>

      <% if current_user.has_role? :system %>
          <div class="control-group string optional company_fax">
            <label class="string optional control-label" for="company_fax"><%= t('activerecord.attributes.company.company_type') %></label>

            <div class="controls">
              <%= f.select :company_type, {"Provider" => "provider", "Agent" => "agent"}, include_blank: false %>
            </div>
          </div>
      <% end %>

    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
