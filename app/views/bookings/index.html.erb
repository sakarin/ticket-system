<div class="span8">

  <div class="widget stacked">
    <div class="widget-header">
      <i class="icon-tasks"></i>

      <h3>Search Route</h3>
    </div>

    <div class="widget-content">

      <%#= render 'shared/step' %>

      <%= search_form_for @search, url: search_bookings_path, method: :post, :html => {:class => ""} do |f| %>

          <div class="form-inputs">
            <div class="control-group">
              <label class="control-label" for="inputSource"> Route Type:</label>
              <label class="radio">
                <%= radio_button("q", "route_type_cont", "airport") %>Mini Bus to Airport
              </label>
              <label class="radio">
                <%= radio_button("q", "route_type_cont", "tour") %>Tour
              </label>
              <label class="radio">
              <%= radio_button("q", "route_type_cont", "bus") %>Bus Ticket
            </label>
            </div>

            <div class="control-group">
              <label class="control-label" for="inputSource"> Destination:</label>

              <div class="controls">
                <%= f.collection_select(:destination_id_eq, Destination.order(:name), :id, :name, {include_blank: false}) %>
              </div>
            </div>

            <div class="control-group">
              <label class="control-label" for="inputDeparture"> Departure:</label>

              <div class="controls">
                <div id="datetimepicker1" class="input-append date">

                  <input data-format="dd/MM/yyyy" type="text" id="q_departure_at_casted_date_equals" name="q[departure_at_casted_date_equals]"/>
                <span class="add-on">
                  <i data-time-icon="icon-time" data-date-icon="icon-calendar"></i>
                </span>
                </div>
              </div>
            </div>
          </div>

          <div class="control-group">
            <label class="control-label" for="inputSource"> Seat:</label>

            <div class="controls">
              <%= select(:seat, :number, (1..20)) %>
            </div>
          </div>

          <div class="form-actions no-indent ">
            <%= f.button :Search, :class => "btn btn-success floatleft" %>
          </div>


      <% end %>
    </div>
  </div>
</div>

