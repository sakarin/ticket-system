<div class="span8">
  <ul class="processnav" style="margin-top: -10px;">
    <li class="selectedtab">
      <a href=""><span class="num">1</span> Search</a></li>
    <li class="selectedtab">
      <a href=""><span class="num">2</span> Select Route</a>
    </li>

    <li>
      <a href=""><span class="num">3</span> Customer Detail</a>
    </li>
    <li class="last">
      <a href=""><span class="num">4</span> Summary</a>
    </li>
  </ul>
</div>

<div class="span12">

  <div class="widget stacked">
    <div class="widget-header">
      <i class="icon-tasks"></i>

      <h3>Select Route</h3>
    </div>

    <div class="widget-content">
      <%= search_form_for @search, url: bookings_path, method: :post, :html => {:class => "f-filter"} do |f| %>

          <table class="blue">
            <tr>
              <th></th>
              <th>Route</th>
              <th>Car standard</th>
              <th>Seat</th>
              <th>Available</th>
              <th>Price</th>
              <th>Departure</th>
              <th>Arrival</th>
              <th>Company</th>
            </tr>

            <% @departs.each do |route| %>
                <% if route.seat - route.bookings.sum(:seat) > session[:seat].to_i  %>
                <tr>
                  <td><%= radio_button_tag(:route_id, route.id) %></td>
                  <td><%= route.destination.name %></td>
                  <td><%= route.car_standard %></td>
                  <td><%= route.seat %></td>
                  <td><%= get_available(route) %></td>
                  <td><%= route.price %></td>
                  <td><%= route.departure %></td>
                  <td><%= route.arrival %></td>
                  <td><%= route.company.name %></td>
                </tr>
                  <% end %>
            <% end %>
          </table>

          <div class="form-actions">
            <%= f.submit :back, :class => "btn floatleft", :name => "btn_back" %>
            <%= f.submit :next, :class => "btn btn-success floatright", :name => "btn_next" %>
          </div>
      <% end %>
    </div>
  </div>
</div>