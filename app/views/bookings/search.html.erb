<h1>Listing trips</h1>
<%= render 'shared/step' %>

<%= search_form_for @search, url: bookings_path, method: :post, :html => {:class => "f-filter"} do |f| %>


    <table class="blue">
      <tr>
        <th></th>
        <th>Route</th>
        <th>Car standard</th>
        <th>Seat</th>
        <th>Price</th>
        <th>Departure</th>
        <th>Arrival</th>
        <th>Company</th>
      </tr>

      <% @departs.each do |trip| %>
          <tr>
            <td><%= radio_button_tag(:trip_id, trip.id) %></td>
            <td><%= "#{trip.source.name} - #{trip.destination.name}" %></td>
            <td><%= trip.car_standard %></td>
            <td><%= trip.seat %></td>
            <td><%= trip.price %></td>
            <td><%= trip.departure %></td>
            <td><%= trip.arrival %></td>
            <td><%= trip.company %></td>
          </tr>
      <% end %>
    </table>
    <br/>

    <div class="form-actions">
      <%= f.submit :back, :class => "btn-success floatleft", :name => "btn_back" %>
      <%= f.submit :next, :class => "btn-success floatright", :name => "btn_next" %>
    </div>
<% end %>