<h1>Listing trips</h1>

<%= search_form_for @search, url: bookings_path, method: :post, :html => {:class => "f-filter"} do |f| %>
    <%= hidden_field_tag "seat", params[:seat][:number] %>

    <table class="blue">
      <tr>
        <th></th>
        <th>Route</th>
        <th>Car standard</th>
        <th>Seat</th>
        <th>Price</th>
        <th>Departure</th>
        <th>Arrival</th>
        <th>Company</th>
      </tr>

      <% @departs.each do |trip| %>
          <tr>
            <td><%= radio_button_tag(:trip_id, trip.id) %></td>
            <td><%= "#{trip.source.name} - #{trip.destination.name}" %></td>
            <td><%= trip.car_standard %></td>
            <td><%= trip.seat %></td>
            <td><%= trip.price %></td>
            <td><%= trip.departure %></td>
            <td><%= trip.arrival %></td>
            <td><%= trip.company %></td>
          </tr>
      <% end %>
    </table>
    <br/>

    <%= f.button :submit %>

<% end %>