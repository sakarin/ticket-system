<div class="span8">
  <div class="widget stacked">
    <div class="widget-header">
      <i class="icon-edit"></i>

      <h3>Customers </h3>
    </div>

    <div class="widget-content">
      <table class="blue">
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Tel</th>
          <th>Seat</th>
          <th>Pick Up Point</th>
        </tr>


        <% @trip.bookings.each do |booking| %>
            <tr>
              <td><%= booking.id %></td>
              <td><%= link_to "#{booking.customer_name}", report_booking_path(booking) %></td>
              <td><%= booking.customer_telephone %></td>
              <td><%= booking.trip_items.count(:id) %></td>
              <td><%= booking.pick_up_point %></td>

            </tr>

        <% end %>
      </table>

      <div class="btn-with-navbar">
        <%#= will_paginate @trip, :renderer => BootstrapPagination::Rails, :class => "pagination floatright", :previous_label => "&#8592;", :next_label => "&#8594;" %>
        <%= link_to "Back", trips_path, :class => "btn btn-success" %>
      </div>

    </div>
  </div>
</div>

<div class="span4">
  <div class="widget stacked widget-box">
    <div class="widget-header">
      <i class="icon-search"></i>
      <h3>Trip Details</h3>
    </div>

    <div class="widget-content">
      <div class="ticket-details">

            <p>
              <b>Route:</b>
              <%= route_to_s @trip %>
            </p>

            <p>
              <b>Car standard:</b>
              <%= @trip.car_standard %>
            </p>

            <p>
              <b>Departure:</b>
              <%= I18n.l(@trip.departure, :format => :long) %>
            </p>

            <p>
              <b>Arrival:</b>
              <%= I18n.l(@trip.arrival, :format => :long) %>
            </p>

            <p>
              <b>Company:</b>
              <%= @trip.company %>
            </p>

            <p>
              <b>Price:</b>
              <%= @trip.price %>
            </p>

      </div>

    </div>


  </div>
</div>

