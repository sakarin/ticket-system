<%= simple_form_for(@destination) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, :class => "btn btn-success" %>
      <%= link_to 'Back', destinations_path, :class => "btn btn-inverse" %>
    </div>
<% end %>
