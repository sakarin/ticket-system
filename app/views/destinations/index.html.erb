<div class="span8">
  <div class="widget stacked">
    <div class="widget-header">
      <i class="icon-tasks"></i>
      <h3>Listing destinations</h3>
    </div>

    <div class="widget-content">
      <table class="blue">
        <tr>
          <th>Name</th>
          <th></th>

        </tr>

        <% @destinations.each do |destination| %>
            <tr>
              <td><%= destination.name %></td>
              <td class="toolbars">
                <%= link_to t('toolbars.edit'), edit_destination_path(destination), :title => t('toolbars.edit'), :class => "act edit" %>
                <%= link_to t('toolbars.delete'), destination, confirm: t('confirm.delete'), method: :delete, :title => t('toolbars.delete'), :class => "act delete" %>
              </td>
            </tr>
        <% end %>
      </table>
      <div class="btn-with-navbar">
        <%= will_paginate @destinations, :renderer => BootstrapPagination::Rails, :class => "pagination floatright", :previous_label => "&#8592;", :next_label => "&#8594;" %>
        <%= link_to "New Destination", new_destination_path, :class => "btn btn-success" %>
      </div>

    </div>
  </div>
</div>

<div class="span4">
  <div class="widget stacked widget-box">
    <div class="widget-header">
      <i class="icon-search"></i>
      <h3>Search Sources</h3>
    </div>
    <!-- /widget-header -->

    <div class="widget-content">

      <%= search_form_for @search, :html => {:class => ""} do |f| %>
          <div class="form-inputs">
            <div class="control-group source_name">
              <label class="control-label" for="source_name">Name</label>

              <div class="controls">
                <div class="input-append">
                  <%= f.text_field :name_cont %>
                  <%= f.button :search, :class => "btn" %>
                </div>

              </div>
            </div>
          </div>
      <% end %>

    </div>
    <!-- /widget-content -->

  </div>
</div>
