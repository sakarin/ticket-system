@media print {
    body {
        background-color: #FFF;
    }

    #container {
        width: auto;
        margin: 0;
        padding: 0;
        border: none;
    }

    #line_items {
        page-break-before: always;
    }

    #pdf_link {
        display: none;
    }
}


@font-face {
    font-family: 'DBOzoneX';
    src: url(<%= asset_path 'db_Ozone.eot' %>);
    src: url(<%= asset_path 'db_Ozone.eot?#iefix' %>) format('embedded-opentype'), url(<%= asset_path 'db_Ozone.ttf' %>) format('truetype');
    font-weight: normal;
    font-style: normal;

}

.content {

    /*padding: 20px 20px 0px 20px;*/
    padding: 20px;

    min-height: 480px;
    background: #fff;
    -webkit-box-shadow: 0 0 6px rgba(0, 0, 0, 0.3);
    -moz-box-shadow: 0 0 6px rgba(0, 0, 0, 0.3);
    box-shadow: 0 0 6px rgba(0, 0, 0, 0.3);
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;
}

body {
    /*background: url(<%= asset_path 'wallpapers/paper.jpg'%>) #f5efe6;*/
    /*-webkit-tap-highlight-color: rgba(0, 0, 0, 0);*/
    background-color: #333333!important;;

}

.head-title {
    color: #dd4b39;

}

.title-group {
    .title {
        border-bottom: 1px solid #ebebeb;
        h3 {
            margin: 0 0px -3px;
        }
    }
    padding-bottom: 15px;

}

.RG {
    background: url(<%= asset_path 'activity_icons_4_915bbe063236330b.png' %>) no-repeat left top;
    background-position: -16px -128px;
    height: 32px;
    width: 32px;
    display: inline-block;
    margin: 0 0px 3px 0;
    vertical-align: middle;
}


#new_user{
    width: 360px;
    margin-right: 20px;
    float: left;
    border-right: 1px solid #ddd;
    padding-right: 20px;
}

.avatar {
    vertical-align: top;
    width: 25px;
    height: 25px;
}

.fb_login {
    padding-left: 30px;
    width: 500px;
    float: left;
}

.login_with.facebook {
    background: url(<%= asset_path 'facebook-button.png'%>) 0 0 no-repeat;
    color: white;
    display: block;
    font-size: 14px;
    font-weight: bold;
    height: 40px;
    line-height: 38px;
    /*margin: 0 0 5px;*/
    text-indent: 45px;
    text-shadow: #000 0 -1px 0;
    width: 200px;
    text-decoration: none;
    -webkit-text-stroke: 1px transparent;
}

.toolbar-back {
    vertical-align: bottom;
    padding-left: 10px;
    width: 50px;
}

.pull-bottom {
    /*vertical-align: bottom;*/
    padding-top: 10px;
}

.bare {
    margin-bottom: 20px;
}

.fee .indent label {
    float: none;
    font-weight: normal;
    font-size: 12px;
}

.toolbars {
    width: 80px;

}

.brand {
    font-family: "db_ozone_xregular", sans-serif;
    font-weight: normal;
    text-shadow: 1px 1px 0px rgba(0, 0, 0, 0.2);
    font-smooth: always;
